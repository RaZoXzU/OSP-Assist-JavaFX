<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="osp.controllers.MembersFormController">
   <children>
      <Label text="Członkowie" VBox.vgrow="ALWAYS" />
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <CheckBox mnemonicParsing="false" text="Kobiety" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </CheckBox>
            <CheckBox mnemonicParsing="false" text="Mężczyźni" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </CheckBox>
            <CheckBox mnemonicParsing="false" text="JOT" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </CheckBox>
         </children>
      </HBox>
      <TableView VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn prefWidth="75.0" text="Imię" />
          <TableColumn prefWidth="75.0" text="Nazwisko" />
            <TableColumn prefWidth="75.0" text="Miejscowość" />
            <TableColumn prefWidth="75.0" text="Funkcja" />
            <TableColumn prefWidth="75.0" text="Stopień" />
            <TableColumn prefWidth="75.0" text="Akcja" />
        </columns>

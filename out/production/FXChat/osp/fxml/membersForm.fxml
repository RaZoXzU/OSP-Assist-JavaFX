<Pane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="osp.controllers.MembersFormController">
   <children>
      <VBox prefHeight="600.0" prefWidth="800.0">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />

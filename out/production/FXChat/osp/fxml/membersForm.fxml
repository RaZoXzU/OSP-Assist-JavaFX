         <children>
            <Label contentDisplay="CENTER" prefHeight="125.0" prefWidth="800.0" text="Członkowie">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <HBox prefHeight="30.0" prefWidth="800.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="800.0" text="Imię">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="800.0" text="Nazwisko">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="800.0" text="Miejscowość">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="800.0" text="Funkcja">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="800.0" text="Stopień">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="800.0" text="Akcja">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </HBox>
            <ScrollPane prefHeight="600.0" prefWidth="800.0">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <content>
                  <VBox fx:id="listMembers" prefHeight="423.0" prefWidth="764.0" />
               </content>
            </ScrollPane>
            <HBox alignment="CENTER" prefHeight="200.0" prefWidth="800.0" spacing="15.0">
               <children>
                  <Button fx:id="btnAddMember" mnemonicParsing="false" onAction="#addMembers" prefHeight="600.0" prefWidth="800.0" text="Dodaj członka">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnBack" mnemonicParsing="false" onAction="#onBackClicked" prefHeight="600.0" prefWidth="800.0" text="Wróć">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </HBox>

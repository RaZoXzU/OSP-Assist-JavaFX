         <children>
            <Button fx:id="btnOptions" mnemonicParsing="false" onAction="#onOptionsClicked" prefHeight="40.0" prefWidth="150.0" text="Opcje" HBox.hgrow="ALWAYS" />
            <Separator prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnAddMember" mnemonicParsing="false" onAction="#onAddMemberClicked" prefHeight="40.0" prefWidth="150.0" text="Dodaj osobę" />
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#onBackClicked" prefHeight="40.0" prefWidth="150.0" text="Wstecz" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
